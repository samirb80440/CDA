<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="shortcut icon" type="image/png" href="{{ asset('Image/favicon_io/favicon-16x16.png') }}"/>
		<link rel="stylesheet" href="{{ asset('styles/page.css') }}">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<header>
		<nav class="navbar navbar-expand-lg d-flex colornav ">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_index') }}"><img src="{{ asset('Image/icones/icons8_harpe_50.png') }}"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse llapse justify-content-center " id="navbarSupportedContent">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link  {{ app.request.attributes.get('_route') == 'app_index' ? 'active' : '' }}" aria-current="page" href="{{ path('app_index') }}">Accueil</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item  {{ app.request.attributes.get('_route') == 'app_produits' ? 'active' : '' }}" href="{{ path('app_produits') }}">Intruments</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item {{app.request.attributes.get('_route')  == 'app_sousCategorie' ? 'active' : ''}}" href="{{ path('app_sousCategorie') }}">Sous-categories</a>
								</li>
							</ul>
						</li>
						<form class="d-flex" role="search" action="{{ path('app_recherche') }}" method="GET">
							<input class="form-control me-2" name="recherche" type="text" placeholder="Rechercher..." aria-label="Search">
							<button class="btn btn-outline-secondary" type="submit" style="display: none;">Rechercher</button>
						</form>
						<li class="nav-item ">
							<a class="nav-link { app.request.attributes.get('_route') == 'app_contact' ? 'active' : '' }}" href="{{ path('app_contact') }}">Contact</a>
						</li>
						{% if not app.user %}
							<li class="nav-item ">
								<a class="nav-link {{ app.request.attributes.get('_route') == 'app_registration' ? 'active' : '' }}" href="{{ path('app_registration') }}">Inscription</a>
							</li>
						{% endif %}
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link {{ app.request.attributes.get('_route') == 'app_utilisateur' ? 'active' : '' }}" href="{{ path('app_utilisateur') }}">
									<i class="fa-solid fa-address-card"></i>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">
									<i class="fa-solid fa-right-from-bracket" style="color:rgb(240, 16, 16);"></i>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_gestion') }}">
								<i class="fa-solid fa-list-check"></i>
								</a>
							</li>
						{% else %}
							<li class="nav-item ">
								<a class="nav-link { app.request.attributes.get('_route') == 'app_login' ? 'active' : '' }}" href="{{ path('app_login') }}">Connexion</a>
							</li>
						{% endif %}
					</li>
					<li class="nav-item ">
						<a class="nav-link" href="{{ path('app_panier')}}">
							<i class="fa-solid fa-cart-shopping" style="color: #000000;"></i>
						</a>
					</li>

				</ul>
			</div>
		</div>
	</nav>
</html></header><body>

{% block body %}{% endblock %}
<footer>
	<nav class="navbar navbar-expand-lg d-flex colornav mt-3  fixed-bottom  col-lg-12justify-content-center">
		<div class="container-fluid">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav d-flex flex-wrap  justify-content-center">
					<li class="nav-item px-5 dropup">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Nous connaître
						</a>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="#">Mention légales</a>
							</li>
							<li>
								<a class="dropdown-item" href="#">Politique de confidentialité</a>
							</li>
							<li><hr class="dropdown-divider"></li>
							<li>
								<a class="dropdown-item" href="#">Qui sommes nous ?</a>
							</li>
						</ul>
					</li>
				</ul>
				<ul class="navbar-nav  flex-wrap justify-content-center footer-icons">
					<li class="nav-item">
						<a class="nav-link px-5 " href="#"><img src="{{ asset ('Image/icones/icons8_twitter-30.png')}}"></a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#"><img src="{{ asset ('Image/icones/icons8_instagram_30(1).png')}}"></a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#"><img src="{{ asset ('Image/icones/icons8_facebook-30.png')}}"></a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</footer></body><script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script></html>

