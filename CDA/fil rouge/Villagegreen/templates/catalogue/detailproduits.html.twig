{% extends 'base.html.twig' %}

{% block title %}Instruments{% endblock %}

{% block body %}
	<div>
	 <div class="container my-5">
			<div class="row justify-content-center">
					<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
						<div class="card text-bg-dark my-3" style="width: 10rem;">
							<img src="{{ asset('Image/article/' ~ produit.photoProduit) }}" class="card-img-top" alt="{{ produit.nomProd}}">
							<div class="card-body">
								<h5 class="card-title">{{ produit.nomProd }}</h5>
                                <p class="card-text">{{ produit.libLongProd}}</p>
								{%if app.user %}
									<p class="card-text text-center">{{ produit.prixAchat + ( ('0.' ~ app.user.Coeffcli) * produit.prixAchat) | number_format(2) }}</p>
								{% else %}
									<p class="card-text text-center">{{ produit.prixAchat + (0.20 * produit.prixAchat) | number_format(2) }}</p>
							{% endif %}
						</div>
						      <div class="d-flex justify-content-end">
                            <a href="{{ path ("app_ajout_panier" , {id: produit.id}) }}" class="btn btn-primary">Ajouter</a>
                          </div>
					</div>
				</div>
			</div>
	  </div>
	</div>
{% endblock %}
