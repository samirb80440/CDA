{% extends 'base.html.twig' %}

{% block title %}Modifier mes adresses{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Modifier mes adresses</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.adresselivrai) }}
                {{ form_widget(form.adresselivrai, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresselivrai) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.adressefactu) }}
                {{ form_widget(form.adressefactu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adressefactu) }}
            </div>

            <div class="text-end">
                {{ form_widget(form.Save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}